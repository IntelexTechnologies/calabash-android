<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.xamarin.xtcandroidsample.orientations.OrientationsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Portrait"
            android:id="@+id/buttonGotoPortraitActivity"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:onClick="goToPortraitActivity"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Reverse Portrait"
            android:id="@+id/buttonGotoReversePortraitActivity"
            android:layout_below="@+id/buttonGotoPortraitActivity"
            android:layout_alignLeft="@+id/buttonGotoPortraitActivity"
            android:onClick="goToReversePortraitActivity"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Landscape"
            android:id="@+id/buttonGotoLandscapeActivity"
            android:layout_below="@+id/buttonGotoReversePortraitActivity"
            android:layout_alignLeft="@+id/buttonGotoReversePortraitActivity"
            android:onClick="goToLandscapeActivity"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Reverse Landscape"
            android:id="@+id/buttonGotoReverseLandscapeActivity"
            android:layout_below="@+id/buttonGotoLandscapeActivity"
            android:layout_alignLeft="@+id/buttonGotoLandscapeActivity"
            android:onClick="goToReverseLandscapeActivity"/>
    </LinearLayout>

</RelativeLayout>
