<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.xamarin.xtcandroidsample"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".Settings"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:ignore="HardcodedDebugMode">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WebViewActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".DatePickerActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".ScrollActivity"
            android:label="@string/title_activity_scroll"></activity>
        <activity
            android:name=".ViewDataActivity"
            android:label="@string/title_activity_view_data"></activity>
        <activity
            android:name=".SpellCheckActivity"
            android:label="@string/title_activity_spell_check"></activity>
        <activity
            android:name=".DirectionalSwipeActivity"
            android:label="@string/title_activity_directional_swipe"></activity>
        <activity
            android:name=".ViewsActivity"
            android:label="@string/title_activity_views"></activity>
        <activity
            android:name=".orientations.OrientationsActivity"
            android:label="@string/title_activity_orientations"></activity>
        <activity
            android:name=".orientations.PortraitActivity"
            android:label="@string/title_activity_portrait"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".orientations.ReversePortraitActivity"
            android:label="@string/title_activity_reverse_portrait"
            android:screenOrientation="reversePortrait"></activity>
        <activity
            android:name=".orientations.LandscapeActivity"
            android:label="@string/title_activity_landscape"
            android:screenOrientation="landscape"></activity>
        <activity
            android:name=".orientations.ReverseLandscapeActivity"
            android:label="@string/title_activity_reverse_landscape"
            android:screenOrientation="reverseLandscape"></activity>
        <activity
            android:name=".ScrollWebViewActivity"
            android:label="ScrollWebView" />
        <activity
            android:name=".ScollplicatedActivity"
            android:label="@string/title_activity_scollplicated_activty"></activity>
        <activity
            android:name=".MultiScroll"
            android:label="@string/title_activity_multi_scroll"
            android:theme="@style/Theme.AppCompat.Light"></activity>
        <activity
            android:name=".ScrollShortActivity"
            android:label="@string/title_activity_scroll_short"></activity>
        <activity
            android:name=".HorizontalScrollActivity"
            android:label="@string/title_activity_horizontal_scroll"
            android:theme="@style/Theme.AppCompat.Light"></activity>
        <activity
            android:name=".ListViewActivity"
            android:label="@string/title_activity_list_view_activity"></activity>
        <activity
            android:name=".RecycleViewActivity"
            android:label="@string/title_activity_recycle_view_activity"
            android:theme="@style/Theme.AppCompat.Light"></activity>
        <activity
            android:name=".TextfieldsActivity"
            android:label="@string/title_activity_textfields"></activity>
        <activity
            android:name=".DragAndDropActivity"
            android:label="@string/title_activity_drag_and_drop"></activity>
        <activity
                android:name=".LocationActivity"
                android:label="Location"></activity>
        <activity
            android:name=".SwipeWebViewActivity"
            android:label="SwipeWebViewActivity"></activity>
    </application>

</manifest>
